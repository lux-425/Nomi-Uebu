<%- include('../../shared/includes/head', { pageTitle: 'Your Cart' }) %>
  <link rel="stylesheet" href="/styles/cart.css">
  <script src="/scripts/cart-item-management.js" defer></script>
  </head>

  <body>
    <%- include('../../shared/includes/header') %>
      <main>
        <h1 style="color: var(--color-primary-400);">Your Cart</h1>
        <ul id="cart-items">
          <% for (const cartItem of locals.cart.items) { %>
            <li>
              <%- include('includes/cart-item', { item: cartItem }) %>
            </li>
            <% } %>
        </ul>
        <div id="cart-total">
          <p style="color: var(--color-primary-500-contrast);">
            Total: $<span id="cart-total-price">
              <%= locals.cart.totalPrice.toFixed(2) %>
            </span></p>
          <% if (locals.isAuth && locals.cart.totalQuantity> 0) { %>
            <form action="/orders" method="POST">
              <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
              <button class='btn'>Proceed to Payment</button>
            </form>
            <% } else { %>
              <p id="cart-total-fallback">Login and add items in the cart to proceed and purchase.</p>
              <% } %>
        </div>
      </main>
      <%- include('../../shared/includes/footer') %>